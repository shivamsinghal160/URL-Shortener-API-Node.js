<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Url Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f9fa;
    }
</style>

<body>
    <div class="">
        <h3>Hi <%= user.name %>, Welcome to Url Shortener</h3>
        <form action="/api/shorten" method="post">
            <input type="url" name="longUrl" class="form-control mt-2" placeholder="Enter your Long URL" required>
            <input type="text" name="customAlias" class="form-control mt-2"
                placeholder="Enter your Custom Alias (if any)">
            <input type="text" name="topic" class="form-control mt-2" placeholder="Enter your Topic (if any)">
            <button type="submit" class="btn btn-dark mt-2">Generate Short Url</button>
        </form>
        <!-- alert -->
        <div class="alert alert-<%= (locals.statusCode == 200?'success':'danger') %> <%= (locals.statusCode?'d-block':'d-none') %> mt-2"
            role="alert">
            <p class="mb-0">
                <b><%= (locals.statusCode==200?'Message':'Error') %></b> : <%= locals.message %>
            </p>
            <% if(locals.data){ %>
                <b>Short URL</b> : <a class="<%= (locals.data?'d-inline-block':'d-none') %> mt-2" target="_blank" href="<%= locals.data.shortUrl %>">
                    <%= locals.data.shortUrl %>
                </a>
                <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>